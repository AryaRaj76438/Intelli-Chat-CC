<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal"
    android:maxWidth="500sp"
    android:orientation="vertical"
    tools:context=".UserProfileActivity">

    <include
        layout="@layout/appbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="45dp"
            android:layout_gravity="center"
            app:cardElevation="1dp"
            android:backgroundTint="#D1D1D1">

            <ImageView
                android:id="@+id/profileImageProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:alpha="0.9"
                android:padding="1dp"
                android:src="@drawable/profile2"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fullnameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="17sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/emailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="email"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserId"
                android:maxWidth="8dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/userIdProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserId"
                android:maxWidth="10dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Num"
                android:maxWidth="8dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/phoneNumProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 111111111"
                android:maxWidth="10dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:maxWidth="8dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="5dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fullNameProfileEdt"
                android:textSize="18sp"
                android:maxWidth="10dp"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_weight="1"
                android:hint="Enter Full Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:maxWidth="8dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:padding="5dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailProfileEdt"
                android:textSize="18sp"
                android:maxLines="1"
                android:padding="5dp"
                android:maxWidth="10dp"
                android:layout_weight="1"
                android:hint="Enter email id" />

        </LinearLayout>

        <Button
            android:id="@+id/saveProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE PROFILE"
            app:cornerRadius="1dp" />

    </LinearLayout>


</LinearLayout>